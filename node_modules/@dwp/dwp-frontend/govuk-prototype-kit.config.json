{
  "meta": {
    "description": "Extends the Prototype Kit with macros, styles and templates specific to DWP services."
  },
  "nunjucksMacros": [
    {
      "macroName": "dwpHorizontalNavigation",
      "importFrom": "horizontal-navigation/macro.njk"
    },
    {
      "macroName": "dwpFooter",
      "importFrom": "internal-service-footer/macro.njk"
    },
    {
      "macroName": "dwpHeader",
      "importFrom": "internal-service-header/macro.njk"
    },
    {
      "macroName": "dwpKeyDetailsBar",
      "importFrom": "key-details-bar/macro.njk"
    },
    {
      "macroName": "dwpLanguageToggle",
      "importFrom": "language-toggle/macro.njk"
    },
    {
      "macroName": "dwpQuickReference",
      "importFrom": "quick-reference/macro.njk"
    },
    {
      "macroName": "dwpSideNavigation",
      "importFrom": "side-navigation/macro.njk"
    },
    {
      "macroName": "dwpTimeline",
      "importFrom": "timeline/macro.njk"
    },
    {
      "macroName": "ucActionCard",
      "importFrom": "uc/action-card/macro.njk"
    },
    {
      "macroName": "ucActionCards",
      "importFrom": "uc/action-cards/macro.njk"
    },
    {
      "macroName": "ucAgentHeader",
      "importFrom": "uc/agent-header/macro.njk"
    },
    {
      "macroName": "ucClaimantHeader",
      "importFrom": "uc/claimant-header/macro.njk"
    },
    {
      "macroName": "ucClaimantNavigation",
      "importFrom": "uc/claimant-navigation/macro.njk"
    },
    {
      "macroName": "ucSectionCard",
      "importFrom": "uc/section-card/macro.njk"
    },
    {
      "macroName": "ucSectionCards",
      "importFrom": "uc/section-cards/macro.njk"
    }
  ],
  "nunjucksPaths": ["/components"],
  "sass": [
    "/components/key-details-bar/_key-details-bar.scss",
    "/components/language-toggle/_language-toggle.scss",
    "/components/internal-service-header/_internal-service-header.scss",
    "/components/internal-service-header-navigation/_internal-service-header-navigation.scss",
    "/components/horizontal-navigation/_horizontal-navigation.scss",
    "/components/side-navigation/_side-navigation.scss",
    "/components/timeline/_timeline.scss",
    "/components/quick-reference/_quick-reference.scss",
    "/components/uc/action-card/_action-card.scss",
    "/components/uc/action-cards/_action-cards.scss",
    "/components/uc/agent-header/_agent-header.scss",
    "/components/uc/claimant-header/_claimant-header.scss",
    "/components/uc/claimant-navigation/_claimant-navigation.scss",
    "/components/uc/section-card/_section-card.scss",
    "/components/uc/section-cards/_section-cards.scss"
  ],
  "scripts": ["/components/dwp.min.js"]
}
