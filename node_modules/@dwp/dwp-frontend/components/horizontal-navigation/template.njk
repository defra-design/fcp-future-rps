{% if params.contained %} 
<div class="dwp-horizontal-navigation__wrapper">
    <div class="dwp-horizontal-navigation__container">
{% endif %}
    <nav class="dwp-horizontal-navigation {%- if params.containerClasses %} {{ params.containerClasses }}{% endif %}" aria-label="{{ params.ariaLabel or "Horizontal" }}"
    {%- for attribute, value in params.attributes %} {{ attribute }}="{{ value }}"{% endfor %}>
        <ul class="dwp-horizontal-navigation__list{% if params.contained %} dwp-horizontal-navigation__list--no-line{% endif %}">
        {% for item in params.items %}
        {% set selected = params.selectedItem === item.href %}
            <li class="dwp-horizontal-navigation__item{% if selected %} dwp-horizontal-navigation__item--selected{% endif %}">
            <a {% if item.id %}id="{{item.id}}" {% endif %}href="{{ item.href }}" class="dwp-horizontal-navigation__link"{% if selected %} aria-current="true"{% endif %}>{{ item.text }}</a>
            </li> 
        {% endfor %}
        </ul>
    </nav>
{% if params.contained %} 
    </div>
</div>
{% endif %}
