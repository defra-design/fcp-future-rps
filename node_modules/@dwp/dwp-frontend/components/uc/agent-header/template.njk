<header class="uc-agent-header {%- if not params.disableStickyHeader %} uc-agent-header--sticky {% endif %} {%- if params.classes %} {{ params.classes }}{% endif %}" data-module="govuk-header"
  {{- govukAttributes(params.attributes) -}}>
  <div class="uc-agent-header__container {{ params.containerClasses | default("govuk-width-container", true) }}">
    <div class="uc-agent-header__logo">
      {#- The SVG needs `focusable="false"` so that Internet Explorer does
      not treat it as an interactive element - without this it will be
      'focusable' when using the keyboard to navigate.

      We use a single compound path for the logo to prevent subpixel rounding
      shifting different elements unevenly relative to one another. #}
      {% if params.serviceUrl %}
          <a href="{{ params.serviceUrl }}" class="uc-agent-header__link uc-agent-header__link--homepage">
            <span class="uc-agent-header__crown-logo">{{ _tudorCrownOnly | safe | trim | indent(8) }}</span>
            <span class="uc-agent-header__service-name">
              {{ params.serviceName }}
            </span>
          </a>
      {% else %}
        <span class="uc-agent-header__service-name">
          <span class="uc-agent-header__crown-logo">{{ _tudorCrownOnly | safe | trim | indent(8) }}</span> {{ params.serviceName }}
        </span>
      {% endif %}
    </div>
    <div class="uc-agent-header__content">
      {% if params.navigation | length %}
      <button type="button" class="uc-agent-header__menu-button govuk-js-header-toggle" aria-controls="uc-agent-header__navigation__wrapper" {%- if params.menuButtonLabel and params.menuButtonLabel != menuButtonText %} aria-label="{{ params.menuButtonLabel }}"{% endif %} hidden>
        {{ menuButtonText }}
      </button>
      <div id="uc-agent-header__navigation__wrapper" class="uc-agent-header__navigation__wrapper">
        <nav aria-label="{{ params.navigationLabel | default(menuButtonText, true) }}" class="uc-agent-header__navigation {%- if params.navigationClasses %} {{ params.navigationClasses }}{% endif %}">
            <ul id="navigation" class="uc-agent-header__navigation-list">
            {% for item in params.navigation %}
              {% if item.text or item.html %}
              <li class="uc-agent-header__navigation-item {%- if item.active %} uc-agent-header__navigation-item--active{% endif %}">
                {% if item.href %}
                <a class="uc-agent-header__link" href="{{ item.href }}"  {{ 'target=_blank' if item.opensInNewWindow }}
                  {%- for attribute, value in item.attributes %} {{attribute}}="{{value}}"{% endfor %}>
                {% endif %}
                  {{ item.html | safe | trim | indent(14) if item.html else item.text }}
                  {% if item.opensInNewWindow %}
                    <span class="govuk-visually-hidden">(opens in a new tab)</span>
                  {% endif %}
                {% if item.href %}
                </a>
                {% endif %}
              </li>
              {% endif %}
            {% endfor %}
            </ul>
          </nav>
          {% if params.action %}
              <div class="uc-agent-header__profile">
                  {% if params.profileName %}
                      <span id="current-user">{{ params.profileName }}</span>:
                  {% endif %}
                  <a class="uc-agent-header__link uc-agent-header__profile-link" href="{{ params.actionUrl }}" {% if params.profileName %}aria-describedby="current-user"{% endif %}>{{ params.action }}</a>
              </div>
          {% endif %}
        </div>
      {% endif %}
    </div>
  </div>
</header>
