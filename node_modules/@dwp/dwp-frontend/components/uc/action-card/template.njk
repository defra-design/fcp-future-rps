<div class="uc-action-card">
    <a href="{{ params.titleUrl }}" class="uc-action-card__link">
        
        <span class="uc-action-card__link-text">{{ params.title }}</span>

    {% if params.alert %}
        <p class="uc-action-card__alert">{{ params.alert }}</p>
    {% endif %}

    {% if params.description %}
        <p class="uc-action-card__description">{{ params.description }}</p>
    {% endif %}
    </a>
</div>
