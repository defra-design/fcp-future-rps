{% from "../section-card/macro.njk" import ucSectionCard %}

{% if params.cards | length > 0 %}
    <ul class="uc-section-cards">
        {% for card in params.cards %}
        <li class="uc-section-cards__item">
            {{ ucSectionCard( card ) }}
        </li>
        {% endfor %}
    </ul>
{% endif %}
