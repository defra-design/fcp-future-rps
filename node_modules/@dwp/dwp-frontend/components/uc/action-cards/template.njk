{% from "../action-card/macro.njk" import ucActionCard %}

{% if params.cards | length > 0 %}
    <ul class="uc-action-cards">
        {% for card in params.cards %}
        <li class="uc-action-cards__item">
            {{ ucActionCard( card ) }}
        </li>
        {% endfor %}
    </ul>
{% endif %}
