{%- from "../../components/internal-service-header-navigation/macro.njk" import dwpHeaderNavigation -%}

<header {%- if params.navigation and not params.navigation.mobile.disabled %} data-module="govuk-header"{% endif %} class="dwp-header {%- if params.classes %} {{ params.classes }}{% endif %}" 
        {%- for attribute, value in params.attributes %} {{ attribute }}="{{ value }}"{% endfor %}>
    <div class="dwp-header__content {{ "govuk-width-container" if params.container else "dwp-header__content--no-container" }} {%- if params.containerClasses %} {{ params.containerClasses }}{% endif %}">
      <div class="dwp-header__service-name {%- if params.action %} dwp-header__service-name--with-action{% endif %}">
        <a href="{{ params.serviceHref }}" class="dwp-header__link">{{ params.serviceName or params.name }}</a>
      </div>
    {% if params.action %}
      <div class="dwp-header__service-action">
        <a href="{{ params.actionHref }}" class="dwp-header__link">{{ params.action }}</a>
      </div>
    {% endif %}
    {%- if params.navigation -%}
      {{ 
        dwpHeaderNavigation({
          action: { href: params.actionHref, text: params.action } if params.action else null,
          ariaLabel:  params.navigation.airaLabel,
          attributes: params.navigation.attributes,
          classes: params.navigation.classes,
          items: params.navigation.items,
          selectedItem: params.navigation.selectedItem,
          mobile: params.mobile
        })
      }}
    {%- endif %}
  </div>
</header>