<header class="govuk-header dwp-header {%- if params.classes %} {{ params.classes }}{% endif %}" data-module="govuk-header"
        {%- for attribute, value in params.attributes %} {{ attribute }}="{{ value }}"{% endfor %}>
  <div class="{% if params.container -%} govuk-width-container {% endif -%} {{ params.containerClasses if params.containerClasses -}}">
    {% if params.action %}
      <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
          <a href="{{ params.serviceHref }}" class="govuk-header__link govuk-header__service-name">
            {{ params.name if params.name else "Internal service Header" }}
          </a>
        </div>
        <div class="govuk-grid-column-one-third dwp-header__container--action">
          <a href="{{ params.actionHref }}" class="govuk-header__link action">
            {{ params.action }}
          </a>  
        </div>
      </div>
    {% else %}
       {% if params.serviceHref %}
          <a href="{{ params.serviceHref }}" class="govuk-header__link govuk-header__service-name dwp-header__container--service-name">
            {{ params.name if params.name else "Internal service Header" }}
          </a>
        {% else %}
          <div class="govuk-header__service-name dwp-header__container--service-name service-name-default">
            {{ params.name if params.name else "Internal service Header" }}
          </div>
      {% endif %}
    {% endif %}
  </div>
</header>

