{%- from "govuk/components/tag/macro.njk" import govukTag -%}

<section class="dwp-quick-reference{% if params.classes %} {{ params.classes }}{% endif %}" aria-label="{{ params.ariaLabel | default("Quick reference", true) }}"
{%- for attribute, value in params.attributes %} {{ attribute }}="{{ value }}"{% endfor %}>
    <dl class="dwp-quick-reference__block">
      {% if params.primaryReference %}
        <dt class="dwp-quick-reference__label govuk-visually-hidden">{{ params.primaryReference.text }}</dt>
        <dd class="dwp-quick-reference__primary">{{ params.primaryReference.value }}</dd>
      {% endif %}

      {% if params.secondaryReference %}
        <dt class="dwp-quick-reference__label dwp-quick-reference__label--primary{% if not params.secondaryReference.textDisplay === true %} govuk-visually-hidden{% endif %}">{{ params.secondaryReference.text }}</dt>
        <dd class="dwp-quick-reference__secondary">{{ params.secondaryReference.value }}</dd>
      {% endif %}

      {% if params.status %}
        <dt class="dwp-quick-reference__label{% if not params.status.textDisplay === true %} govuk-visually-hidden{% endif %}">{{ params.status.text }}</dt>
        <dd class="dwp-quick-reference__status">
          {{ govukTag({
            text: params.status.value,
            classes: params.status.classes or undefined
          }) }}
        </dd>
      {% endif %}
    </dl>
</section>